<% @user ||= current_user %>

<section>
	<%= gravatar_for @user %>
<h1><%= @user.name %></h1>
<% if request.env['PATH_INFO'] != "/users/#{params[:id]}" %>
	<span><%= link_to "view my profile", @user %></span>
	<span><%= pluralize(@user.microposts.count, "micropost") %></span>
<% end %>
</section>
 <section>
  <%= render 'shared/stats' %>
</section>


